@model IEnumerable<baumann_MIS4200.Models.Automobile>

@{
    ViewBag.Title = "Automobile Info";
}

<h2>Automobile Info</h2>

<p>
    @Html.ActionLink("New Automobile", "Create")
</p>
<table class="table table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.make)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.model)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.year)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.make)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.model)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.year)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.automobileID }) |
            @Html.ActionLink("Details", "Details", new { id=item.automobileID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.automobileID })
        </td>
    </tr>
}

</table>
